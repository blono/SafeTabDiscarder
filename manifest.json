{
  "manifest_version": 3,
  "name": "Safe Tab Discarder",
  "description": "This is a simple extension that discards the current tab (releasing memory) when you click its icon.",
  "version": "1.0.0",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_title": "Discard this tab"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
